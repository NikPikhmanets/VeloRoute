<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_route"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nikpikhmanets.veloroute.activity.RouteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageRoute"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:src="@drawable/image_route_budische" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageRoute"
                android:layout_margin="5dp"
                android:lineSpacingMultiplier="1.1"
                android:text="@string/XY" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/hol2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageRoute"
                android:layout_margin="5dp"
                android:lineSpacingMultiplier="1.1"
                android:text="@string/XY" />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7000">

        <TextView
            android:id="@+id/nameRouteLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Холодный яр"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/distanceRouteLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameRouteLabel"
            android:layout_margin="5dp"
            android:text="Дистанция:"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameRouteLabel"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/distanceRouteLabel"
            android:text="120 km"
            android:textColor="@android:color/holo_green_light"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/roadRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="грунт 10%/асфальт 90%"
            android:textColor="@android:color/holo_green_light"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/distance"
            android:layout_alignBottom="@+id/distance"
            android:layout_toEndOf="@+id/distance" />

    </RelativeLayout>


</RelativeLayout>
