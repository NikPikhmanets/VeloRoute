<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.nikpikhmanets.veloroute.activities.UserInfoActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_info_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/white"
        tools:src="@drawable/background_splash"/>

    <TextView
        android:id="@+id/tv_user_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        tools:text="name: Abdullah Ibrahim "/>

    <TextView
        android:id="@+id/tv_user_info_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        tools:text="email: abdullah@gmail.com"/>

</LinearLayout>
