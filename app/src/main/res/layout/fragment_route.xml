<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nikpikhmanets.veloroute.fragments.RouteFragment">

    <TextView
        android:id="@+id/nameRouteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="top|center_horizontal"
        android:padding="10dp"
        android:text="@string/name_route"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/showMapBtn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="50dp"
        android:text="Show in maps" />


    <ImageView
        android:id="@+id/iv_route_image"
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:layout_marginTop="100dp"
        tools:src="@drawable/image_route_budische" />


</FrameLayout>
