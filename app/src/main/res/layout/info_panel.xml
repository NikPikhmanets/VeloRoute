<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/infoTrackLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#000000"
    android:orientation="vertical"
    android:visibility="invisible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout style="@style/InfoLinearLayout">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:src="@drawable/icon_altitude" />

            <TextView
                android:id="@+id/altitudeTextView"
                style="@style/ValueTextStyle" />

            <TextView
                style="@style/QuantityTextStyle"
                android:text="@string/m" />

        </LinearLayout>

        <LinearLayout style="@style/InfoLinearLayout">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:src="@drawable/icon_current_track_distance" />

            <TextView
                android:id="@+id/distanceTextView"
                style="@style/ValueTextStyle" />

            <TextView
                style="@style/QuantityTextStyle"
                android:text="@string/km" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout style="@style/InfoLinearLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/icon_avg_speed" />

            <TextView
                android:id="@+id/avgSpeedTextView"
                style="@style/ValueTextStyle" />

            <TextView
                style="@style/QuantityTextStyle"
                android:layout_weight="1"
                android:text="@string/km_h" />

        </LinearLayout>

        <LinearLayout style="@style/InfoLinearLayout">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/icon_speed" />

            <TextView
                android:id="@+id/speedTextView"
                style="@style/ValueTextStyle" />

            <TextView
                style="@style/QuantityTextStyle"
                android:layout_weight="1"
                android:text="@string/km_h" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout style="@style/InfoLinearLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/icon_time_recording_track" />

            <TextView
                android:id="@+id/timeRideTextView"
                style="@style/ValueTextStyle" />

            <TextView
                style="@style/QuantityTextStyle"
                android:text="@string/h" />

        </LinearLayout>

        <LinearLayout style="@style/InfoLinearLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/icon_max_speed" />

            <TextView
                android:id="@+id/maxSpeedTextView"
                style="@style/ValueTextStyle" />

            <TextView
                style="@style/QuantityTextStyle"
                android:layout_weight="1"
                android:text="@string/km_h" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>