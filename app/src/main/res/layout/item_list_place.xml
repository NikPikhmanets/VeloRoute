<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageItemPlace"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/example_route" />

        <TextView
            android:id="@+id/textNameItemPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/imageItemPlace"
            android:textStyle="bold"
            tools:text="Замкова гора" />

        <TextView
            android:id="@+id/textDescrItemPlace"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:layout_below="@+id/textNameItemPlace"
            android:layout_toEndOf="@+id/imageItemPlace"
            android:ellipsize="end"
            tools:text="@string/XY" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

